 pipeline {
    agent any

    stages {


        stage('Maven clean install') {
            steps {
sh "mvn clean install -Dmaven.test.skip=true"            }
        }

          stage('Nexus') {
            steps {


  sh 'mvn clean package deploy:deploy-file -DgroupId=tn.esprit.spring -DartifactId=gestion-station-ski -Dversion=1.0 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=deploymentRep -Durl=http://192.168.33.10:8081/repository/maven-releases/ -Dfile=target/gestion-station-ski-1.0.jar'

            }
        }
   

stage('Run Unit Tests with Mockito') {
            steps {
                sh 'mvn test' // Ex√©cutez les tests unitaires avec Mockito en utilisant Maven
                // Utilisez 'gradle test' pour les projets Gradle
            }
        }
 

       
                     
  


    		   stage('Run Spring && MySQL Containers') {
                                    steps {
                                        script {
                                          sh 'docker-compose up -d'
                                        }
                                    }
                                }





    }



    }
